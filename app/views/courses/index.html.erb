<br/>
<div class="booyah-box col-10 offset-1 course-index">

  <% @courses.each do |course| %>
    <h2 class="text-center title"><%= link_to course.title, course_path(course) %></h2>
    <br/>
    <div class="text-center image-main">
   <%= image_tag course.photo, class: 'img-fluid' %> 
   </div>
   <br/>
    <div class="row">
      <div class="col-sm-8 col-12">
       <% course.description %>
      </div>
      <div class="col-sm-4 col-12 text-center">
        <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large' %>

      </div>
    </div>
       <hr/>
    <br class="clr"/>
  <%end%>
</div>